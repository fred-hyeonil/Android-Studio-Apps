<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity9">

    <TextView
        android:id="@+id/txt1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:text="Base"
        android:textSize="30sp"
        android:gravity="center"
        android:background="#ffff00"
        android:layout_centerInParent="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn1"
            android:layout_toLeftOf="@id/txt1"
            android:layout_alignTop="@id/txt1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn1"
            android:layout_toLeftOf="@id/txt1"
            android:layout_centerVertical="true"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="btn1"
            android:layout_toLeftOf="@id/txt1"
            android:layout_alignBottom="@id/txt1"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn1"
        android:layout_below="@id/txt1"
        android:layout_alignRight="@id/txt1"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn1"
        android:layout_above="@id/txt1"
        android:layout_alignLeft="@id/txt1"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn1"
        android:layout_above="@id/txt1"
        android:layout_alignRight="@id/txt1"/>

</RelativeLayout>