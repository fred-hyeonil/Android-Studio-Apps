<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동영상 제작"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="24dp" />

        <EditText
            android:id="@+id/photoInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="사진을 입력하세요"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/videoInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="예시 동영상을 입력하세요"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="20dp" />

        <EditText
            android:id="@+id/videoContentInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="영상에 들어갈 내용을 입력하세요"
            android:minHeight="200dp"
            android:gravity="top"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/generateVideoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="동영상 제작하기"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>